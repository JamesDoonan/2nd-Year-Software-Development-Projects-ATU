<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mastermind.MainPage"
             Title="Menu"
             BackgroundImageSource = "mm.jpg">
    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">

        <!-- New game Button -->
        <Button x:Name="Enter" Text="New Game" Margin="15" HorizontalOptions="Center" VerticalOptions="Center" Clicked="Enter_Clicked" />

        <!-- Rules Button -->
        <Button x:Name="RulesBtn" Text="Game Rules" Margin="15" VerticalOptions="Center"  HorizontalOptions="Center" Clicked="Rules_Button_Clicked" />

        <!-- Exit Button -->
        <Button x:Name="Exit" Text="Exit" Margin="15" VerticalOptions="Center"  HorizontalOptions="Center" Clicked="Exit_Button_Clicked" />

    </StackLayout>
        
</ContentPage>